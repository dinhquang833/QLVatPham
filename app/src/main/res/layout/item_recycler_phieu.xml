<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#009B77"
    app:cardCornerRadius="20dp"
    app:cardElevation="20dp"
    android:layout_margin="15dp"
    android:id="@+id/parent_Phieu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/it_rec_txtMaPhieu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mã phiếu: 0000"
            android:maxLines="1"
            android:textSize="25sp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:gravity="center"/>

        <TextView
            android:id="@+id/it_rec_txtTrangThai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trạng thái: Chưa trả"
            android:maxLines="1"
            android:textSize="20sp"
            android:textColor="#fff"
            android:gravity="center"/>

        <TextView
            android:id="@+id/it_rec_txtNgayTao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngày tạo: 00/00/0000"
            android:maxLines="1"
            android:textSize="20sp"
            android:textColor="#fff"
            android:gravity="center"/>

        <TextView
            android:id="@+id/it_rec_txtKiHan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kì hạn: X tháng"
            android:maxLines="1"
            android:textSize="20sp"
            android:textColor="#fff"
            android:gravity="center"/>

        <Button
            android:id="@+id/it_rec_btnChiTiet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chi tiết"
            android:textColor="#009B77"
            android:backgroundTint="#fff"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/it_rec_btnDaTra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đã trả"
            android:textColor="#009B77"
            android:backgroundTint="#fff"
            android:layout_marginHorizontal="5dp" />

        <Button
            android:id="@+id/it_rec_btnQuaHan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quá hạn"
            android:textColor="#009B77"
            android:backgroundTint="#fff"
            android:layout_marginHorizontal="5dp"/>

        <Button
            android:id="@+id/it_rec_btnXoa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Xóa"
            android:textColor="#009B77"
            android:backgroundTint="#fff"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="0dp"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>